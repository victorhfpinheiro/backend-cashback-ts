{
  "ts-node": {
    "files": true
  },
  "files": [
    "./src/@types/request.d.ts"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "pretty": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@schemas/*": [
        "./src/schemas/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@validators/*": [
        "./src/validators/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@enums/*": [
        "./src/enums/*"
      ],
      "@exceptions/*": [
        "./src/exceptions/*"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@logger/*": [
        "./src/logger/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}